[Unit]
Description=Python sound splitter - one to three
After=sound.target
After=network.target network-online.target
After=spotify-connect.service

[Service]
ExecStart=/usr/bin/python3 /usr/share/audiohub/sound_splitter.py -i 'Loopback: PCM (hw:0,1)' -o softvol_local_spotify -o2 softvol_rem1_spotify -o3 softvol_rem2_spotify
User=ACTUAL_USER
Restart=always
RestartSec=10
StartLimitInterval=30
StartLimitBurst=20

[Install]
WantedBy=multi-user.target
